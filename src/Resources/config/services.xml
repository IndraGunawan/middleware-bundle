<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="indragunawan_middleware.filter.listener" class="Indragunawan\MiddlewareBundle\EventSubscriber\FilterSubscriber" public="false">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="annotation_reader" />
            <argument type="service" id="indragunawan_middleware.middleware" />
        </service>

        <service id="indragunawan_middleware.middleware" class="Indragunawan\MiddlewareBundle\Middleware" public="false" />
    </services>
</container>
